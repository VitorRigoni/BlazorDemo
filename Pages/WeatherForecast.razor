@page "/weather-forecast"

@using BlazorDemo.Data
@using LanguageExt
@using static LanguageExt.Prelude;
@inject WeatherForecastService ForecastService

<h1>Weather forecast for the city of: @selectedCity</h1>

<p>This component demonstrates fetching data from a service.</p>

@if (apiResult.IsNone)
{
    <p><em>Loading...</em></p>
}
else
{

}

@code {
    private string selectedCity = "Vancouver";
    private Option<OpenWeatherApiResult> apiResult = None;

    protected override async Task OnInitializedAsync()
    {
        apiResult = await ForecastService.GetWeatherForecastForCityAsync(selectedCity, "ca");
    }
}
